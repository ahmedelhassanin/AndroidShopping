<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_desert_det"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.engahmed.mitchamr.food.desert.desert_det">



    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/frame">

        <view
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            class="com.example.engahmed.mitchamr.SliderLayout"
            android:id="@+id/view_des" />

    </FrameLayout>

    <android.support.design.widget.FloatingActionButton
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:clickable="true"
        app:srcCompat="@android:drawable/ic_input_add"
        android:layout_marginRight="65dp"
        android:layout_marginEnd="65dp"
        android:id="@+id/floatingActionButton_des"
        app:elevation="20dp"
        app:backgroundTint="@color/colorAccent"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="215dp"
        app:fabSize="normal" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@android:color/holo_orange_dark"
        android:id="@+id/re"
        android:layout_below="@+id/frame"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">


        <ImageView
            android:layout_width="119dp"
            android:layout_height="80dp"
            app:srcCompat="@drawable/lll"
            android:id="@+id/image_des"
            android:layout_marginTop="10dp" />

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/name_des"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="24dp"
            android:layout_marginRight="60dp"

            android:layout_weight="1"
            android:textStyle="normal|bold"
            android:textSize="24sp"
            android:textColor="@color/cast_expanded_controller_progress_text_color" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/re"
        android:background="@android:color/holo_purple"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="13dp"
        android:id="@+id/phone">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="40dp"
            app:srcCompat="@android:drawable/stat_sys_phone_call"

            android:layout_marginTop="12dp"
            android:id="@+id/imageView3"
            android:layout_below="@+id/re"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_weight="0.52" />

        <TextView
            android:text="TextView"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imageView3"
            android:layout_toRightOf="@+id/imageView3"
            android:layout_toEndOf="@+id/imageView3"
            android:layout_marginTop="25dp"
            android:id="@+id/phone_des"
            android:layout_weight="1"
            android:textSize="18sp"
            android:textColor="@color/cardview_light_background"
            android:textStyle="normal|bold" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@android:color/holo_orange_dark"

        android:layout_marginTop="21dp"

        android:layout_below="@+id/phone"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:text="المكان"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:id="@+id/textView8"
            android:textSize="24sp"
            android:textStyle="normal|bold"
            android:textColor="@color/cast_expanded_controller_text_color" />

    </LinearLayout>

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="49dp"
        android:layout_marginStart="49dp"
        android:id="@+id/textplace_des"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="14dp"
        android:textSize="24sp"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="normal|bold|italic" />


</RelativeLayout>
