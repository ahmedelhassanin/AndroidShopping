<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginTop="5dp"

    card_view:cardCornerRadius="10dp"
    card_view:cardElevation="0dp">

    <RelativeLayout
        android:layout_width="172dp"
        android:layout_height="204dp"
        android:orientation="vertical"
        android:weightSum="5">


        <ImageView
            android:id="@+id/image1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="19dp"
            card_view:srcCompat="@mipmap/ic_launcher"
            android:layout_alignParentTop="true"
            android:layout_alignRight="@+id/tittle1"
            android:layout_alignEnd="@+id/tittle1" />

        <TextView
            android:id="@+id/tittle1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="TextView"
            android:textColor="@color/cast_libraries_material_featurehighlight_outer_highlight_default_color"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_below="@+id/image1"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="35dp"
            android:layout_marginStart="35dp" />

        <TextView
            android:id="@+id/des1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tittle1"
            android:layout_alignStart="@+id/tittle1"
            android:layout_below="@+id/tittle1"
            android:layout_marginTop="11dp"
            android:text="TextView"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/price1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/des1"
            android:layout_alignParentBottom="true"
            android:layout_alignRight="@+id/des1"
            android:text="TextView" />

    </RelativeLayout>

</android.support.v7.widget.CardView>


